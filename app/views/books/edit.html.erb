          <div class="field">
            <p>Title</p>
            <%= f.text_field :title %>
          </div>

          <div class="field">
            <p>Body</p>
             <%= f.text_area :body %>
          </div>
          <div class="actions">
            <!--後でlabelに変更-->
             <%= f.submit 'Update Book' %>
            <!--<p>CerateBook</p>-->
          </div>
        <% end %>
