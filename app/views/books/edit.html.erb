<body>
  <% if @book.errors.any? %>
    <h1>Editing Book</h1>
    <div class="error_messege">
      <h2>2 errors prohibited this book from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>

          <li><%= message %></li>
        <% end %>
      </ul>

    </div>

    <div class="error_form">
      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
        <p>Title</p>
        <div class="error_field">

          <%= f.text_field :title %>
        </div>

        <p>Body</p>
        <div class="error_field">

           <%= f.text_area :body %>
        </div>
        <div class="actions">
          <!--後でlabelに変更-->
           <%= f.submit 'Create Book' %>
          <!--<p>CerateBook</p>-->
        </div>
      <% end %>
