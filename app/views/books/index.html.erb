<body>
  <h1>Books</h1>
  <table>
    <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
    <tr>

      <td><%= book.title %></td>

      <td><%= book.body %></td>

      <td>
        <!--<a href="/books/show">show</a>-->
        <%= link_to "show", book_path(book.id) %>
      </td>
      <td>
        <!--<a href="/books/edit">edit</a>-->
        <%= link_to "edit", edit_book_path(book.id) %>
      </td>
      <td>
        <!--<a>distroy</a>-->
        <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
      </td>

    </tr>
    <% end %>
  </tbody>
  </table>

  <h2>New book</h2>
  <% if @book.errors.any? %>

    <div class="error_messege">
      <h2>2 errors prohibited this book from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>

          <li><%= message %></li>
        <% end %>
      </ul>

    </div>
    <div class="error_form">
      <%= form_with model: @book do |f| %>
        <p>Title</p>
        <div class="error_field">

          <%= f.text_field :title %>
        </div>

        <p>Body</p>
        <div class="error_field">

           <%= f.text_area :body %>
        </div>
        <div class="actions">
          <!--後でlabelに変更-->
           <%= f.submit 'Create Book' %>
          <!--<p>CerateBook</p>-->
        </div>
      <% end %>
    </div>

  <% else %>

    <div class="form">
      <%= form_with model: @book do |f| %>
        <div class="field">
          <p>Title</p>
          <%= f.text_field :title %>
        </div>

        <div class="field">
          <p>Body</p>
           <%= f.text_area :body %>
        </div>
        <div class="actions">
          <!--後でlabelに変更-->
           <%= f.submit 'Create Book' %>
          <!--<p>CerateBook</p>-->
        </div>
      <% end %>
    </div>
   <% end %>
</body>