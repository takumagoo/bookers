<body>
  <h1>Books</h1>
  <table>
    <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
    <tr>

      <td><%= book.title %></td>

      <td><%= book.body %></td>

      <td>
        <!--<a href="/books/show">show</a>-->
        <%= link_to "show", book_path(book.id) %>
      </td>
      <td>
        <!--<a href="/books/edit">edit</a>-->
        <%= link_to "edit", edit_book_path(book.id) %>
      </td>
      <td>
        <a>distroy</a>
      </td>

    </tr>
    <% end %>
  </tbody>
  </table>

  <h2>New book</h2>
  <div class="form">
    <%= form_with model: @book do |f| %>
      <div class="field">
        <p>Title</p>
        <%= f.text_field :title %>
      </div>

      <div class="field">
        <p>Body</p>
         <%= f.text_area :body %>
      </div>
      <div class="actions">
        <!--後でlabelに変更-->
         <%= f.submit 'Create Book' %>
        <!--<p>CerateBook</p>-->
      </div>
    <% end %>
  </div>
</body>